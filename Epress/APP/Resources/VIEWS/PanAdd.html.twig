{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-md-12 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-info alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

                            <h3><br>
                                <center>
                                    {{ message }}
                                </center>

                            </h3>

                        </div>
                    {% endfor %}
                    Enregistrement des Achats du client
                </div>
                <div class="panel-body">
                    <ul class="nav nav-pills">
                        <li class="active"><a href="#Panier" data-toggle="tab">Panier</a>
                        </li>
                        <li class=""><a href="#soin" data-toggle="tab">Soin</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade  active in" id="Panier">
                            <div class="col-md-6" style="margin-left: 25%;margin-right: 25%;margin-bottom: 5%;">
                                {{ form_start(form,{'attr': {'v':'v' }}) }}
                                {{ form_widget(form) }}
                                <center>
                                    <button type="submit" class="btn btn-primary">valider</button>
                                    <button type="reset" class="btn btn-default">annuler</button></center>
                                {{ form_end(form) }}
                            </div>
                            <h3>

                                {% set v=0 %}
                                Panier du CLient

                                {% for P in Pans %}
                                    {% if P.etat == 0  and P.date|date('d-m-Y')==date|date('d-m-Y') %}
                                        {% set v=v+1 %}
                                    {% endif %}
                                {% endfor %}

                                {% if v > 0 %}
                                    <a href="{{ path('salon') }}"  >
                                        <button class="button btn-circle" style=";margin-left: 10px;background-color: rgb(127, 224, 153);box-shadow: 0px 0px 10px 1px rgba(201, 201, 201, 0.61); " ><i class="fa fa-print fa-2x"></i></button>
                                    </a>
                                {% endif %}

                            </h3>

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="example">
                                    <thead>
                                    <tr>

                                        <th>Soin</th>
                                        <th>Prix</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for P in Pans %}

                                        {% if P.etat == 0  and P.date|date('d-m-Y')==date|date('d-m-Y') %}
                                            <tr>
                                                <td>{{ P.Soin.nom }}</td>
                                                <td>{{ P.Soin.prix }}</td>
                                                <td>
                                                    <a  href="{{ path('supprimer_Pan',{'id':P.id}) }}" onclick="return confirm('confirmez?')" ><button class="btn btn-danger" type="submit" ><i class="glyphicon glyphicon-trash icon-white"></i>Supprimer</button></a>

                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>


                        </div>
                        <div class="tab-pane fade" id="soin">
                            <br>
                            <div class="col-md-6" style="margin-left: 25%;margin-right: 25%;">
                                {{ form_start(formSoin,{'attr': {'v':'v' }}) }}
                                {{ form_widget(formSoin) }}
                                <center>
                                    <button type="submit" class="btn btn-primary">valider</button>
                                    <button type="reset" class="btn btn-default">annuler</button></center>
                                {{ form_end(formSoin) }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}