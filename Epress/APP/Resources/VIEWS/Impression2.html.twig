{% extends 'base.html.twig' %}

{% block body%}
    <body onload="window.print();">
    <header class="main-header">
        <!-- Logo -->
        <a href="{{ path('listeKilo') }}" class="logo"><b>Retourner a l'historique</b></a>
        <!-- Header Navbar: style can be found in header.less -->
    </header>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <img src=" {{ asset('image/logo.png') }}" style="width: 70px;">
                        <b>KPELLY CENTER</b>
                    </h2>

                </div><!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <h4> Recu de Lavage</h4>
                    <address style="width: 2000px" >
                        CONTACT: +228 90 49 18 38
                    </address>
                </div><!-- /.col -->
                <div class="col-sm-4 invoice-col">

                </div><!-- /.col -->
                <div class="col-sm-4 invoice-col" >
                    <br>
                    <div>   date:<br> {{ date|date('d-m-Y') }} </div>
                    <br>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped" border="1">

                        <thead>
                        {% set compteur=0 %}
                        <tr >
                            <th>Interval de Poids</th>
                            <th>Prix</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for K in Kilo %}
                            <tr>
                                {% if  K.id==id %}

                                <td>{{ K.Poid.espace  }}</td>
                                <td>{{ K.Poid.prix  }}</td>
                                {% set compteur=K.Poid.prix %}

                                {% endif %}

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p>Total Montant:  <span> {{ compteur }} </span></p>
                    {# {% if compteur==0 %}
                             {% redirect "homepage" %}
                         {% endif %}#}
                </div><!-- /.col -->

            </div><!-- /.row -->

            <div class="row">

                <center>  <h6 style="font-style: italic" >  Rue Akrowa Doulassame Amoutive Lome </h6> </center>
            </div><!-- /.row -->
        </section><!-- /.content -->
    </div><!-- ./wrapper -->

    </body>


{% endblock %}
