{% extends 'base.html.twig' %}

{% block main %}

    <div class="panel panel-default">
        <div class="panel-heading">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>


                    <h3><br>
                        <center>
                            {{ message }}
                        </center>

                    </h3>

                </div>
            {% endfor %}
            <h3>
                Liste des Utilisateurs</h3>
            <div >
                <br>
                <a href="{{ path('fos_user_registration_register') }}" ><button type="submit" >Nouveau Utilisateur</button></a>
            </div>

        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="example">
                    <thead>
                    <tr >
                        <th>Username</th>
                        <th>email</th>
                        <th>Roles</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %} <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{% for role in user.roles %}
                                {{ role }}
                            {% endfor %}
                        </td>
                        <td>
                            <a  href="{{ path('mod',{'id':user.id}) }}"><button class="btn btn-primary" type="submit" ><i class="glyphicon glyphicon-edit icon-white"></i>Modifier</button></a>
                            <a  href="{{ path('effacer',{'id':user.id}) }}" onclick="return confirm('confirmez?')" ><button class="btn btn-danger" type="submit" ><i class="glyphicon glyphicon-trash icon-white"></i>Supprimer</button></a>

                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>


{% endblock %}
