{% extends 'base.html.twig' %}

{% block main %}

    <br><br>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        {% set compteur=0 %}
                        {% for message in app.flashes('notice') %}
                            <div class="alert alert-info alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><b>×</b></button>
                                <h3><br>
                                    <center>
                                        {{ message }}
                                    </center>

                                </h3>
                            </div>
                        {% endfor %}

                        <h3 class="box-title">Liste des Rappels</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Client</th>
                                <th>Telephone</th>

                              <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for depot in depots %}
                                            <tr>
                                                <td> {{ depot.nomPrenom }}</td>
                                                <td> {{ depot.telephone }}</td>

                                                <td>
                                                    <a  href="{{ path('envoyer',{'id':depot.id}) }}"><button class="btn btn-primary" type="submit" ><i class="glyphicon glyphicon-phone icon-white "></i> Envoyer un message a Mme/Mr {{ depot.nomPrenom }} </button></a>
                                                </td>

                                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
{% endblock %}