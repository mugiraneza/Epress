{% extends 'base.html.twig' %}

{% block main %}

    <div class="panel panel-default">
        <div class="panel-heading">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

                    <h3><br>
                        <center>
                            {{ message }}
                        </center>

                    </h3>

                </div>
            {% endfor %}
            <h3>
                Liste des Depots par client</h3>
            <div >
                <br>
                <a data-toggle="modal" data-target="#c" href="#"><button type="submit" >Nouveau Depot</button></a>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="example">
                    <thead>
                    <tr>
                        <th>Client</th>
                        <th>Linge</th>
                        <th>Quantite</th>
                        <th>prix</th>
                        <th>avance</th>
                        <th>date</th>
                        <th>Statut</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for Depot in Depots %}
                        <tr>
                            <td>{{ Depot.Client.NomPrenom }}</td>
                            <td>{{ Depot.Linge.libelle }} {{ Depot.couleur.libelle }} en {{ Depot.tissu.libelle }}</td>
                            <td>{{ Depot.quantite }}</td>
                            <td>{{ Depot.prix }}</td>
                            <td>{{ Depot.avance }}</td>
                            <td>{{ Depot.dateDepot|date('d-m-Y') }}</td>
                            <td>{{ Depot.statut }}</td>
                            <td>
                                <a  href="{{ path('supde',{'id':Depot.id}) }}" onclick="return confirm('confirmez?')" ><button class="btn btn-danger" type="submit" ><i class="glyphicon glyphicon-trash icon-white"></i>Supprimer</button></a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>


{% endblock %}
