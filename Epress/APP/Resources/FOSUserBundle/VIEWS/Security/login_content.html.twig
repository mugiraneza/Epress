{% trans_default_domain 'FOSUserBundle' %}


<html lang="en"><head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta charset="utf-8">
    <title>E-Press Authentification</title>

    <meta name="description" content="User login page">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">


    <!-- bootstrap & fontawesome -->
    <link href="{{ asset ('bootstrap/css/bootstrap.min.css ') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bootstrap/css/font-awesome.min.css ') }}" rel="stylesheet" type="text/css" />

    <!-- text fonts -->
    <link href="{{ asset ('bootstrap/css/fonts.googleapis.com.css') }}" rel="stylesheet" type="text/css" />

    <!-- ace styles -->
    <link href="{{ asset ('bootstrap/css/ace.min.css ') }}" rel="stylesheet" type="text/css" />

    <link href="{{ asset ('bootstrap/css/ace-rtl.min.css') }}" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="{{ asset('pressing.ico') }}" />
</head>

<body class="login-layout light-login">
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container" {#style="margin-top: 6%;"#} >
                    <div class="center">
                        <h1>
                            <img src=" {{ asset('image/logo.png') }}" style="width: 70px;">
                           {# <i class="ace-icon fa fa-anchor green"></i>#}
                            <span class="red" style="text-shadow:  0px 0px 20px 1px #000000; ">KPELLY</span>
                            <span class="grey" id="id-text2"> CENTER</span>
                        </h1>

                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">
                        <div id="login-box" class="login-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header blue lighter bigger">
                                        <i class="ace-icon fa fa-coffee green"></i>
                                        Veuillez saisir vos informations
                                    </h4>

                                    <div class="space-6"></div>

                                    {% block login %}

                                    <form action="{{ path("fos_user_security_check") }}" method="post">
                                        {% if csrf_token %}
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                        {% endif %}

                                        <label class="block clearfix" for="username">
                                            <span class="block input-icon input-icon-right">
                                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username">
                                                <i class="ace-icon fa fa-user"></i>
                                            </span>
                                        </label>

                                        <label class="block clearfix" for="password">
                                        <span class="block input-icon input-icon-right">
                                            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password">
                                            <i class="ace-icon fa fa-lock"></i>
                                        </span>
                                        </label>

                                        <div class="space"></div>

                                        <div class="clearfix">
                                            <label class="inline">
                                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="ace"/>
                                                <span class="lbl"><label for="remember_me">Enregistrer mot de passe</label></span>
                                            </label>


                                            <button type="submit" class="width-35 pull-right btn btn-sm btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" >
                                                <i class="ace-icon fa fa-key"></i>
                                                <span class="bigger-110">Valider</span>
                                            </button>
                                        </div>


                                    </form>

                                </div><!-- /.widget-main -->

                                <div class="toolbar clearfix">
                                    <div>
                                        <a href="{{ path('fos_user_resetting_request') }}"  class="forgot-password-link">
                                            <i class="ace-icon fa fa-arrow-left"></i>
                                            Mot de passe oublie?
                                        </a>
                                    </div>


                                </div>


                            </div><!-- /.widget-body -->
                            {% if error %}
                                <div>Mauvais identifiant saisie.Veuillez reessayer</div>
                            {% endif %}
                            {% endblock %}
                        </div><!-- /.login-box -->

                    </div><!-- /.position-relative -->


                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
</div><!-- /.main-container -->

<!-- basic scripts -->


<script src=" {{ asset ('plugins/jQuery/jQuery-2.1.3.min.js') }} " ></script>


<![endif]-->
<script type="text/javascript">
    if('ontouchstart' in document.documentElement) document.write("<script src="{{ asset('js/dataTables/jquery.mobile.custom.min.js') }}" >"+"<"+"/script>");
</script>

<!-- inline scripts related to this page -->
<script type="text/javascript">
    jQuery(function($) {
        $(document).on('click', '.toolbar a[data-target]', function(e) {
            e.preventDefault();
            var target = $(this).data('target');
            $('.widget-box.visible').removeClass('visible');//hide others
            $(target).addClass('visible');//show target
        });
    });


</script>


</body></html>